
@using ServiceClaim.Models
@using ServiceClaim.Objects
@model ServiceClaim.Models.Claim

@using (Html.BeginForm("ConfirmWork", "Claim", FormMethod.Post, new { @id = "ConfirmWorkForm", @class = "form-horizontal", data_toggle = "validator", role = "form" }))
{
    @Html.HiddenFor(m => m.Id)
    @*<div class="row">
            <label class="col-lg-2 text-right">Специалист</label>
            <div class="col-lg-6">
                @Html.DropDownListFor(m => m.SpecialistSid, Model.GetCurrentClaimSpecialistSelectionList(), new { @class = "form-control required-mark", required = "required", data_error = "Выберите специалиста" })
                <span class="help-block with-errors"></span>
            </div>
        </div>*@
    <div class="row">
        <div class="col-lg-push-2 col-lg-10">

            <button type="submit" class="btn btn-success" value="ClaimWorkConfirm" name="ClaimWorkConfirm">Принять в работу</button>
            <a class="btn btn-danger" data-toggle="modal" data-target="#modalClaimWorkCancel">Не обрабатывается СТП</a>
            <div id="modalClaimWorkCancel" class="modal fade" role="dialog">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Ваш комментарий</h4>
                        </div>
                        <div class="modal-body">
                            <p>
                                @*<textarea id="ClaimWorkCancelDescr" name="ClaimWorkCancelDescr" class="form-control required-mark" rows="3" placeholder="Введите комментарий" required="required"></textarea>*@
                                @Html.TextAreaFor(m => m.Descr, new { @class = "form-control required-mark", rows = "5", placeholder = "Введите комментарий" })
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-default" value="ClaimWorkCancel" name="ClaimWorkCancel">Сохранить</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-push-2 col-lg-10">
            <p class="text-danger">@TempData["ServerError"]</p>
        </div>
    </div>
}
