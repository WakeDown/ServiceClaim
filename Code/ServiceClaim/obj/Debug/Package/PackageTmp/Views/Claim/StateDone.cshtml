<script type="text/javascript">
    $(function () {
        $('[name="pay"]').click(function () {
            var $obj = $(this);
            $obj.prop('disabled', true);
            showSpinnerAppend($obj);
            //$('#modalselectServiceList .btn').prop('disabled', true);
            var ssid = $(this).attr('ssid');
            $.ajax({
                url: '@Url.Action("SaveServiceSheetIsPayed")',
                method: 'POST',
                data: { serviceSheetId: ssid },
                success: function () {
                    
                    $('modalselectServiceList').modal({ show: false });
                    $obj.prop('disabled', false);
                    //$('#modalselectServiceList .btn').prop('disabled', false);
                    hideSpinner($obj);
                },
                error: function () {
                    $obj.prop('disabled', false);
                    //$('#modalselectServiceList .btn').prop('disabled', false);
                    hideSpinner($obj);
                }
            });
        });

        $('[name="notpay"]').click(function () {
            var $obj = $(this);
            showSpinnerAppend($obj);
            $obj.prop('disabled', true);
            //$('#modalselectServiceList .btn').prop('disabled', true);
            var ssid = $(this).attr('ssid');
            var comment = $('#notPayedComment-' + ssid);
            $('modalselectServiceList').modal({ show: false });
            $.ajax({
                url: '@Url.Action("SaveServiceSheetIsNotPayed")',
                method: 'POST',
                data: { serviceSheetId: ssid, comment: comment },
                success: function () {
                    $('modalselectServiceList').modal({ show: false });
                    //$('#modalselectServiceList .btn').prop('disabled', false);
                    $obj.prop('disabled', false);
                    hideSpinner($obj);
                },
                error: function () {
                    //$('#modalselectServiceList .btn').prop('disabled', false);
                    $obj.prop('disabled', false);
                    hideSpinner($obj);
                }
            });
        });
    });
</script>
