@using ServiceClaim.Models
@model ServiceClaim.Models.Claim


@using (Html.BeginForm("ContractChoice", "Claim", FormMethod.Post, new { @id = "ConfirmWorkForm", @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.Id)
    <div class="row">
        <label class="col-lg-2 text-right">Договор</label>
        <div class="col-lg-6">
            @Html.DropDownListFor(m => m.IdContract, new SelectList(Contract.GetSelectionList(Model.IdContractor), "Key", "Value"), "--выберите договор--", new { @class = "form-control required-mark", required = "required", data_error = "Выберите специалиста" })
            <span class="help-block with-errors"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-push-2 col-lg-10">
            <button type="submit" class="btn btn-success" value="Confirm" name="Confirm">Сохранить</button>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-push-2 col-lg-10">
            <p class="text-danger">@TempData["error"]</p>
        </div>
    </div>
}